@model The_Occasion.Models.PoemViewModels.SinglePoemViewModel
@using Microsoft.AspNetCore.Identity
@using The_Occasion.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<form asp-action="SaveUserSonnet">
        <div class="title-me"><input class="form-control" asp-for="Poem.Title" placeholder="Enter a Title to Save"></div>
    <div class="row poemRow">
        <input class="form-control hidden" asp-for="Poem.Lines" />
        <span class="hidden">@Model.Poem.Lines</span>
        <input class="form-control hidden" asp-for="Poem.FormId" />
        <span class="hidden">@Model.Poem.FormId</span>
        <input class="form-control hidden" asp-for="Poem.MoodId" />
        <span class="hidden">@Model.Poem.MoodId</span>
        <input class="form-control hidden" asp-for="Poem.TopicId" /><span class="hidden">@Model.Poem.TopicId</span>
        @foreach (var line in Model.LinesArray)
        {
            <div class="col-md-12">@line</div>
        }

        <div class="col-md-3">
            <input class="form-control hidden" asp-for="Poem.
        Author" /><span style="font-style:italic; margin-top: 10px; display: inline-block"> Brought to you courtesy of @Html.DisplayFor(model => model.Poem.Author)'s computer</span>
    </div>
    <div class="saveUserButton text-center">
        <input type="submit" class="btn btn-danger" id="SaveUserSonnet">
    </div>
</div>
    </form>
