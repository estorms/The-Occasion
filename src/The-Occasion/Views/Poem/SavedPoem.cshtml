@model The_Occasion.Models.PoemViewModels.SinglePoemViewModel
@using Microsoft.AspNetCore.Identity
@using The_Occasion.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "The Occasion";
}

<h3>@Html.DisplayFor(model => model.Poem.Title)</h3>

<div class="row">
    @foreach (var line in Model.LinesArray)
    {
        <div class="col-md-12">@line</div>
    }

</div>
<div class="row">
    <div class="col-md-3 author">@Html.DisplayFor(model => model.Poem.Author)</div>
    </div>
<div class="row">
    <div class="favorite text-center">
        <div class="col-md-3"><button id="Save" value="@Model.Poem.PoemId" class="hidden">Eh, Maybe I Do Want It. Save It Again, Please.</button></div>
        <div class="col-md-3"><button id="Delete" value="@Model.Poem.PoemId">Delete From My Profile</button></div>
    </div>

</div>
