@model The_Occasion.Models.PoemViewModels.SinglePoemViewModel
@using Microsoft.AspNetCore.Identity
@using The_Occasion.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<div class="row poemRow top-buffer">
    <div class="col-md-3 top-buffer" style="font-weight: bolder">@Html.DisplayFor(model => model.Poem.Title)</div>
</div>
<div class="row">
    @foreach (var line in Model.LinesArray)
    {
        <div class="col-md-12">@line</div>
    }

</div>
<div class="row"></div>
<div class="row">
    <div class="col-md-3"><span style="font-style:italic; margin-top: 10px; display: inline-block"> Brought to you courtesty of @Html.DisplayFor(model => model.Poem.Author)'s computer</span></div>
    <div class="row poemRow"></div>
    @*<div class="saveUserButton text-center">
            <a class="btn btn-danger" id="SaveUserPoem" value="@Model.Poem">Save</a>
        </div>*@
</div>